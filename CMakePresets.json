{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "clang-deb",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_SCAN_FOR_MODULES": "ON",
        "CUSTOMIZE_BUILD": "ON",
        "JSON_ImplicitConversions": "OFF",
        "BUILD_EXAMPLES": "OFF",
        "BUILD_GAMES": "OFF",
        "FETCHCONTENT_QUIET": false,
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/debug/bin",
        "CMAKE_CXX_FLAGS": "-g3 -Wall -Wpedantic -Wextra -Wno-deprecated-declarations -Wshadow -Wpointer-arith -Wcast-qual -Wformat=2 -Wno-unqualified-std-cast-call"
      }
    },
    {
      "name": "clang-rel",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_SCAN_FOR_MODULES": "ON",
        "CUSTOMIZE_BUILD": "ON",
        "JSON_ImplicitConversions": "OFF",
        "BUILD_EXAMPLES": "OFF",
        "BUILD_GAMES": "OFF",
        "FETCHCONTENT_QUIET": false,
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
        "CMAKE_CXX_FLAGS": "-Wall -Wpedantic -Wextra -Wno-deprecated-declarations -Wshadow -Wpointer-arith -Wcast-qual -Wformat=2 -Wno-unqualified-std-cast-call"
      }
    },
    {
      "name": "web-rel",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "EMSCRIPTEN": "ON",
        "PLATFORM": "Web",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_COMPILER": "${sourceDir}/deps/emsdk/upstream/emscripten/em++",
        "CMAKE_BUILD_TYPE": "MinSizeRel",
        "CMAKE_CXX_SCAN_FOR_MODULES": "ON",
        "CUSTOMIZE_BUILD": "ON",
        "JSON_ImplicitConversions": "OFF",
        "BUILD_EXAMPLES": "OFF",
        "BUILD_GAMES": "OFF",
        "FETCHCONTENT_QUIET": false,
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/deps/emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
        "CMAKE_CXX_FLAGS": "-Wall -Wpedantic -Wextra -Wno-deprecated-declarations -Wshadow -Wpointer-arith -Wcast-qual -Wformat=2 -Wno-unqualified-std-cast-call"
      }
    }
  ]
}

